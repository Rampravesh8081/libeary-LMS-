
@{
    ViewBag.Title = "publication";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="row my-4 ">
        <h2 class="text-center my-2 text-primary">Add Publication</h2>
        <div class="col-sm-3 bg-primary rounded-2 py-3" style="max-height:300px">
            <h2 class="my-3">Publication</h2>
            <form method="post" action="/admin/addpublication" enctype="multipart/form-data">
                <label>Author Name</label>
                <input type="text" placeholder="Author Name" class="form-control" name="Aname" />
                <label>Picture</label>
                <input type="file" placeholder="Author Pic" class="form-control" name="Apic" />
                <br />
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-8 ">

            <table class="table table-bordered table-hover" id="myTable">
                <thead class="table-dark">
                    <tr>
                        <th>Sr</th>
                        <th>Author Name</th>
                        <th>Picture</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if(ViewBag.table2.Rows.Count > 0)
                    {
                        foreach (var row in ViewBag.table2.Rows)
                        {


                            <tr>
                                <td>@row[0]</td>
                                <td>@row[1]</td>
                                <td><img src="~/Content/AuthorPic/@row[2]"  height="60" width="60" /></td>
                                <td>@row[3]</td>
                                <td><button class=" btn btn-success">DELETE</button></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

