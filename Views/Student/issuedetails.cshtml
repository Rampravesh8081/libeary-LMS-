
@{
    ViewBag.Title = "issuedetails";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}




<div class="container">

    <div class="row mb-3">
        <h2 class="text-center my-2 text-primary">Issue Book</h2>
        <div class="col-sm-12 w-50 mx-auto bg-primary">
            <form method="post" action="/student/issuedetailss">
                <div class="row">
                    <div class="col-sm-6">
                        <label>Issue Id</label>
                        <input type="number" placeholder="Issue Id" class="form-control" name="issueid" />
                        <label>Book Name</label>
                        <input type="text" placeholder="Book Name" class="form-control" name="bookname" />

                        <label>Due Date</label>
                        <input type="date" placeholder="Due Date" class="form-control" name="duedate" />

                    </div>
                    <div class="col-sm-6">
                        <label>Member Id</label>
                        <input type="text" placeholder="Member Id" class="form-control" name="memberid" />
                        <label>Issue Date</label>
                        <input type="date" placeholder="Issue Date" class="form-control" name="issuedate" />
                        <label>Return  Date</label>
                        <input type="date" placeholder="Return Date" class="form-control" name="returndate" />

                    </div>
                </div>
                <label>Issue By(Staff ID)</label>
                <input type="text" placeholder="Issue By" class="form-control" name="issueby" />
                <input type="submit" value="Sumbit" class=" form-control my-3 btn btn-success" />
            </form>
        </div>
    </div>

</div>

